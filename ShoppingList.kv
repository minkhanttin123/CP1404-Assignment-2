BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            Button:
                text: 'List Required'
                on_press: app.req()
            Button:
                text: 'List Completed'


            Label:
                text: 'Add New Item...'

            Label:
                text: 'Name'

            TextInput:
                text: ' '
                id: name

            Label:
                text: 'Price'

            TextInput:
                text: ' '
                id: price

            Label:
                text: 'Priority'

            TextInput:
                text: ' '
                id: priority

            Button:
                text: 'Add Item'
                on_press: app.add_list()

            Button:
                text: 'Clear'
                on_press: app.clearbox()
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Total price: 95.45'
                font_size: 14
                size_hint_y: 0.2
                id: header
            Button:
                text: 'Fish fingers'
                id: item1
                background_color: (10,1,1,1)
                font_size: 20
                size_hint_y: 1
                on_press: app.comp1()
            Button:
                text: 'Metal detector'
                id: item2
                background_color: (1,10,1,1)
                font_size: 20
                size_hint_y: 1
                on_press: app.comp2()
            Button:
                text: 'Coffee beans'
                id: item3
                background_color: (1,1,10,1)
                font_size: 20
                size_hint_y: 1
                on_press: app.comp3()
            Button:
                orientation: 'vertical'
                id: item_new
                text: '_____'
                size_hint_y: 0.5
                on_press: app.comp4()







    Label:
        text: "Click items to mark item as completed"
        size_hint_y: 0.07
        id: status_bar





